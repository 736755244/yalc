{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "search.exclude": {},
  "files.exclude": {
    "**/*.js": {
			"when": "$(basename).ts"
		},
		"**/*.js.map": {
			"when": "$(basename).ts"
		},
		"**/*.d.ts": {
			"when": "$(basename).ts"
		}			
  },
  "prettier.tslintIntegration": true,
  // "tslint.run": "onSave",
  // "tslint.autoFixOnSave": true,
  //"editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true  
}